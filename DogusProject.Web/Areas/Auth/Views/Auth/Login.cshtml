@model DogusProject.Web.Models.Auth.DTOs.LoginRequestDto

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card shadow-sm border-0 p-4" style="width: 100%; max-width: 400px;">
        <div class="text-center mb-4">
            <h3 class="fw-bold">Giriş Yap</h3>
            <p class="text-muted small">Hesabınıza erişmek için bilgilerinizi girin</p>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }

        <form asp-area="Auth" asp-controller="Auth" asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-envelope"></i>
                    </span>
                    <input asp-for="Email" class="form-control" type="email" placeholder="ornek@eposta.com" />
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Şifre</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-lock"></i>
                    </span>
                    <input asp-for="Password" class="form-control" type="password" placeholder="••••••••" />
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary rounded-pill">
                    <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                </button>
            </div>

            <div class="text-center">
                <span class="text-muted small">Hesabınız yok mu?</span>
                <a asp-area="Auth" asp-controller="Auth" asp-action="Register" class="text-decoration-none">Kayıt Ol</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
