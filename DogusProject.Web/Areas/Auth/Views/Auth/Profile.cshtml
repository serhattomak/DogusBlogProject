@model DogusProject.Web.Models.Auth.ViewModels.UserProfileViewModel
@{
    ViewData["Title"] = "Profilim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="profile-header"></div>

<div class="px-3">
    <div class="d-flex justify-content-between align-items-start">
        <img src="@Model.AvatarUrl"
             alt="Profil Resmi"
             class="rounded-circle profile-avatar"
             width="96"
             height="96" />

        <a asp-area="Auth" asp-controller="Auth" asp-action="EditProfile" class="btn btn-primary mt-3">
            Profili Düzenle
        </a>
    </div>

    <div class="mt-2">
        <h2 class="fs-4 fw-bold mb-0" id="profile-name">@Model.FullName</h2>
        <p class="text-secondary" id="profile-username">@Model.UserName</p>
    </div>

    <p class="my-3" id="profile-bio">@Model.Bio</p>

    <div class="d-flex flex-wrap gap-3 text-secondary mb-2">
        @if (!string.IsNullOrWhiteSpace(Model.Location))
        {
            <div class="d-flex align-items-center">
                <i class="bi bi-geo-alt me-1"></i>
                <span>@Model.Location</span>
            </div>
        }
        @if (!string.IsNullOrWhiteSpace(Model.Website))
        {
            <div class="d-flex align-items-center">
                <i class="bi bi-link-45deg me-1"></i>
                <a href="@Model.Website" class="text-primary text-decoration-none">@Model.Website</a>
            </div>
        }
        <div class="d-flex align-items-center">
            <i class="bi bi-calendar3 me-1"></i>
            <span id="profile-joined">Katıldı: @Model.JoinedDate.ToString("MMMM yyyy")</span>
        </div>
    </div>

    <div class="d-flex gap-4 profile-stats">
        <div>
            <span class="fw-bold">@Model.Blogs.Count</span>
            <span class="ms-1">Yayınlanan Blog</span>
        </div>
        <div>
            <span class="fw-bold">@Model.Comments.Count</span>
            <span class="ms-1">Yapılan Yorum</span>
        </div>
        @* <div>
            <span class="fw-bold">@Model.Blogs.Count</span>
            <span class="ms-1">Blog</span>
        </div> *@
    </div>
</div>

<ul class="nav nav-tabs mt-4" id="profileTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="posts-tab" data-bs-toggle="tab" data-bs-target="#posts"
                type="button" role="tab" aria-controls="posts" aria-selected="true">
            Bloglar
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="comments-tab" data-bs-toggle="tab" data-bs-target="#comments"
                type="button" role="tab" aria-controls="comments" aria-selected="false">
            Yorumlar
        </button>
    </li>
    @* <li class="nav-item" role="presentation">
        <button class="nav-link" id="bookmarks-tab" data-bs-toggle="tab" data-bs-target="#bookmarks"
                type="button" role="tab" aria-controls="bookmarks" aria-selected="false">
            Kaydedilenler
        </button>
    </li> *@
</ul>

<div class="tab-content" id="profileTabsContent">
    <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
        <div class="px-3" id="profile-posts">
            @await Html.PartialAsync("_MyBlogPostsPartial", Model.Blogs)
        </div>
    </div>

    <div class="tab-pane fade" id="comments" role="tabpanel" aria-labelledby="comments-tab">
        <div class="p-3">
            @await Html.PartialAsync("_MyCommentsPartial", Model.Comments)
        </div>
    </div>

    @* <div class="tab-pane fade" id="bookmarks" role="tabpanel" aria-labelledby="bookmarks-tab">
        <div class="p-3">
            <div class="card">
                <div class="card-body text-center text-secondary">
                    Kaydettiğiniz içerikler burada listelenecek.
                </div>
            </div>
        </div>
    </div> *@
</div>
