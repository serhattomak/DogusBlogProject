@model List<DogusProject.Web.Models.Tag.DTOs.TagDto>
@{
    ViewData["Title"] = "Etiketler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="fw-bold mb-4">🏷️ Etiketler</h2>

    @if (Model != null && Model.Any())
    {
        <div class="d-flex flex-wrap gap-2">
            @foreach (var tag in Model)
            {
                <a asp-area="Public"
                   asp-controller="Tag"
                   asp-action="BlogsByTag"
                   asp-route-id="@tag.Id"
                   class="btn btn-outline-primary btn-sm rounded-pill px-3 tag-hover">
                    #@tag.Name
                </a>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4">Henüz etiket bulunmamaktadır.</div>
    }
</div>

<style>
    .tag-hover:hover {
        background-color: #0d6efd;
        color: #fff;
        transition: 0.2s ease;
    }
</style>