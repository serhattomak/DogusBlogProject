@model List<DogusProject.Web.Models.Category.DTOs.CategoryDto>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="fw-bold mb-4">📚 Kategoriler</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var category in Model)
            {
                <div class="col">
                    <a asp-area="Public"
                       asp-controller="Category"
                       asp-action="BlogsByCategory"
                       asp-route-id="@category.Id"
                       class="text-decoration-none text-dark">
                        <div class="card h-100 shadow-sm border-0 category-card-hover rounded-4">
                            <div class="card-body text-center d-flex flex-column justify-content-center">
                                <i class="bi bi-folder-fill fs-2 text-primary mb-2"></i>
                                <h5 class="fw-semibold">@category.Name</h5>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4">Henüz kategori yok.</div>
    }
</div>

<style>
    .category-card-hover:hover {
        background-color: #f8f9fa;
        transition: background-color 0.3s ease;
        transform: translateY(-2px);
    }

    .category-card-hover {
        transition: transform 0.2s ease;
    }
</style>