@model List<DogusProject.Web.Models.Category.DTOs.CategoryDto>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategoriler</h2>

<a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-primary mb-3 rounded-pill">+ Yeni Kategori</a>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Adı</th>
        <th>Oluşturulma</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>@category.CreatedAt.ToShortDateString()</td>
            <td>
                <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning rounded-pill">Düzenle</a>
                <form asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger rounded-pill" onclick="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?')">Sil</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>