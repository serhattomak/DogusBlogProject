@model List<DogusProject.Web.Models.Tag.DTOs.TagDto>
@{
    ViewData["Title"] = "Etiketler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Etiketler</h2>
<a asp-area="Admin" asp-controller="Tag" asp-action="Create" class="btn btn-primary mb-3">+ Yeni Etiket</a>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Adı</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var tag in Model)
    {
        <tr>
            <td>@tag.Name</td>
            <td>
                <a asp-area="Admin" asp-controller="Tag" asp-action="Edit" asp-route-id="@tag.Id" class="btn btn-sm btn-warning">Düzenle</a>
                <form asp-area="Admin" asp-controller="Tag" asp-action="Delete" asp-route-id="@tag.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>