@model DogusProject.Web.Models.Common.PagedResult<DogusProject.Web.Models.Blog.DTOs.BlogResponseDto>

@{
    ViewData["Title"] = "Benim Bloglarım";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Benim Bloglarım</h2>

@if (Model.Items.Any())
{
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>Oluşturulma</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var blog in Model.Items)
        {
            <tr>
                <td>@blog.Title</td>
                <td>@blog.CategoryName</td>
                <td>@blog.CreatedAt.ToString("dd.MM.yyyy")</td>
                <td>@blog.Status</td>
                <td>
                    <a asp-area="Author" asp-controller="Blog" asp-action="Edit" asp-route-id="@blog.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <form asp-area="Author" asp-controller="Blog" asp-action="Delete" asp-route-id="@blog.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p class="alert alert-info">Henüz bir blog oluşturmadınız.</p>
}