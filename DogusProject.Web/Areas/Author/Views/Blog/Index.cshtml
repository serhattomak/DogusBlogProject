@model DogusProject.Web.Models.Common.PagedResult<DogusProject.Web.Models.Blog.DTOs.BlogResponseDto>
@{
    ViewData["Title"] = "Bloglarım";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bloglarım</h2>

<a asp-area="Author" asp-controller="Blog" asp-action="Create" class="btn btn-primary mb-3">+ Yeni Blog</a>

@if (Model.Items.Any())
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Başlık</th>
                <th>Kategori</th>
                <th>Durum</th>
                <th>Oluşturulma</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var blog in Model.Items)
            {
                <tr>
                    <td>@blog.Title</td>
                    <td>@blog.CategoryName</td>
                    <td>
                        @if (blog.Status == DogusProject.Domain.Enums.BlogStatus.Published)
                        {
                            <span class="badge bg-success">Yayınlandı</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Taslak</span>
                        }
                    </td>
                    <td>@blog.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        <a asp-area="Author" asp-controller="Blog" asp-action="Edit" asp-route-id="@blog.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <form asp-area="Author" asp-controller="Blog" asp-action="Delete" asp-route-id="@blog.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Blog silinsin mi?')">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Sayfalama -->
    <nav aria-label="Sayfalama">
        <ul class="pagination">
            @for (int i = 1; i <= Math.Ceiling((double)Model.TotalCount / Model.PageSize); i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-area="Author"
                       asp-controller="Blog"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-pageSize="@Model.PageSize">@i</a>
                </li>
            }
        </ul>
    </nav>
}
else
{
    <div class="alert alert-info">Henüz blogunuz bulunmamaktadır.</div>
}
