@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Doğuş Blog</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Doğuş Blog</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Public" asp-controller="Blog" asp-action="Index">Bloglar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Public" asp-controller="Tag" asp-action="Index">Etiketler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Public" asp-controller="Category" asp-action="Index">Kategoriler</a>
                    </li>
                </ul>

                <ul class="navbar-nav mb-2 mb-lg-0">
                    @if (HttpContextAccessor.HttpContext?.User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Auth" asp-controller="Auth" asp-action="Profile"><i class="bi bi-person-circle"></i> Profilim</a>
                        </li>
                        <li class="nav-item">
                            <form method="post" asp-area="Auth" asp-controller="Auth" asp-action="Logout" class="d-inline">
                                <button class="btn btn-outline-light btn-sm" type="submit"><i class="bi bi-box-arrow-right"></i> Çıkış</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Auth" asp-controller="Auth" asp-action="Login">Giriş Yap</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Auth" asp-controller="Auth" asp-action="Register">Kayıt Ol</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </header>

    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-md-3">
                @await Html.PartialAsync("_Sidebar")
            </div>
            <div class="col-md-6">
                @RenderBody()
            </div>
            <div class="col-md-3">
                @await Component.InvokeAsync("RightSidebar")
            </div>
        </div>
    </div>

    <footer class="bg-light py-4 mt-5 border-top">
        <div class="container text-center">
            <small>&copy; @DateTime.Now.Year - Doğuş Blog</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="js/site.js"></script>
    @if (User.Identity.IsAuthenticated)
    {
        <script>
            window.accessToken = '@HttpContextAccessor.HttpContext.Session.GetString("AccessToken")';
        </script>
    }

    @RenderSection("Scripts", required: false)
</body>
</html>
