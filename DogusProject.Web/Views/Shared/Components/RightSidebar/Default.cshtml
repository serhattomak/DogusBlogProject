@model DogusProject.Web.Models.Sidebar.ViewModels.RightSidebarViewModel

<aside class="right-sidebar bg-white px-3 py-4 border-start shadow-sm rounded-start">
    <section class="mb-5">
        <h6 class="text-uppercase text-secondary fw-bold mb-3 small">📂 Popüler Kategoriler</h6>
        <ul class="list-group list-group-flush">
            @foreach (var category in Model.PopularCategories)
            {
                <li class="list-group-item px-0 border-0">
                    <a asp-area="Public"
                       asp-controller="Category"
                       asp-action="BlogsByCategory"
                       asp-route-id="@category.Id"
                       class="d-flex justify-content-between align-items-center text-decoration-none sidebar-link">
                        <span class="text-dark fw-medium">@category.Name</span>
                        <span class="badge bg-light text-dark border">@category.BlogCount</span>
                    </a>
                </li>
            }
        </ul>
    </section>

    <section>
        <h6 class="text-uppercase text-secondary fw-bold mb-3 small">🏷️ Popüler Etiketler</h6>
        <ul class="list-group list-group-flush">
            @foreach (var tag in Model.PopularTags)
            {
                <li class="list-group-item px-0 border-0">
                    <a asp-area="Public"
                       asp-controller="Tag"
                       asp-action="BlogsByTag"
                       asp-route-id="@tag.Id"
                       class="d-flex justify-content-between align-items-center text-decoration-none sidebar-link">
                        <span class="text-primary">#<strong>@tag.Name</strong></span>
                        <span class="badge bg-light text-dark border">@tag.BlogCount</span>
                    </a>
                </li>
            }
        </ul>
    </section>
</aside>